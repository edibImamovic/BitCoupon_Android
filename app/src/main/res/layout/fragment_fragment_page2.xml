<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.bitcoupon.bitcoupon.controllers.FragmentsForCoupons.FragmentPage2">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_singleCouponName"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="#ff696763"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_singleCouponDescription"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="#ff696763"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_singleCouponPrice"
            android:padding="10dp"
            android:gravity="right"
            android:textColor="#ff696763"
            android:textSize="15dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/buy_button"
        android:padding="10dp"
        android:textColor="#fffffff8"
        android:text="@string/buy_button"
        android:background="#FE980F" />

</FrameLayout>
