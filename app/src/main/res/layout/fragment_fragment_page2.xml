<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.bitcoupon.bitcoupon.controllers.FragmentsForCoupons.FragmentPage2">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_singleCouponName"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#ffff8c2e"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_singleCouponDescription"
                android:padding="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_singleCouponPrice"
                android:padding="5dp"
                android:gravity="right"
                android:textColor="#ffff8c2e"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/buy_button"
                android:text="@string/buy_button"/>
        </LinearLayout>

</FrameLayout>
